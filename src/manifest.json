{
	"name": "jsDelivr Extension",
	"version": "0.1.0",
	"description": "A jsDelivr Extension for npm and GitHub",
	"manifest_version": 2,
	"icons": {
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "jsDelivr",
		"default_popup": "popup.html"
	},
	"permissions": [
		"tabs",
		"https://github.com/*",
		"https://www.npmjs.com/*",
		"https://raw.githubusercontent.com/*",
		"https://data.jsdelivr.com/*"
	],
	"content_scripts": [
		{
			"run_at": "document_start",
			"matches": [
				"https://github.com/*"
			],
			"css": [
				"content-github.css"
			],
			"js": [
				"content-github.js"
			]
		},
		{
			"run_at": "document_start",
			"matches": [
				"https://www.npmjs.com/*"
			],
			"css": [
				"content-npm.css"
			],
			"js": [
				"browser-polyfill.min.js",
				"content-npm.js"
			]
		}
	],
	"background": {
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		],
		"persistent": false
	}
}